---
import SvgLogo from "./svg/SvgLogo.astro";
---

<nav class="bg-white border-b-2 border-slate-100">
  <div
    class="max-w-6xl mx-auto py-8 px-4 md:px-12 xl:px-0 flex flex-col items-center gap-y-4 lg:gap-y-0 lg:flex-row lg:justify-between lg:items-center"
  >
    <!-- Mixtape Sessions -->
    <a href="/" class="flex flex-row gap-x-4 items-center">
      <SvgLogo svgClass="flex-shrink-0 mr-2 h-16 w-16" />
      <p class="text-3xl tracking-tight font-marker">Mixtape Sessions</p>
    </a>

    <!-- Primary Navbar items -->
    <div class="mt-4 flex flex-row items-center gap-x-8">
      <a
        href="/"
        class="text-md sm:text-xl font-semibold text-slate-700 hover:underline decoration-2 underline-offset-4 decoration-violet-red-600"
      >
        Home
      </a>
      <a
        href="/sessions"
        class="text-md sm:text-xl font-semibold text-slate-700 hover:underline hover:decoration-2 hover:decoration-violet-red-600"
      >
        Sessions
      </a>
      <a
        href="/about"
        class="text-md sm:text-xl font-semibold text-slate-700 hover:underline hover:decoration-2 hover:decoration-violet-red-600"
      >
        About
      </a>
      <a
        href="/contact"
        class="text-md sm:text-xl font-semibold text-slate-700 hover:underline hover:decoration-2 hover:decoration-violet-red-600"
      >
        Contact
      </a>
      <a
        href="https://github.com/Mixtape-Sessions"
        class="text-md sm:text-xl font-semibold text-slate-700 hover:underline hover:decoration-2 hover:decoration-violet-red-600"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
